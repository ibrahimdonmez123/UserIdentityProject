@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Roller</h3>
        </div>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>İsim</th>
                    <th>Düzenlemeler</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3">Rol Yok</td>
                        <td colspan="2">
                            <a href="/RoleAdmin/Create" class="btn btn-danger">Create</a>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                @using (Html.BeginForm("Delete", "RoleAdmin", new { id = role.Id }))
                                {
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                }
                                @Html.ActionLink("Edit", "Edit", new { id = role.Id }, new { @class = "btn btn-primary btn-sm ml-1" })
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="3"></td>
                        <td colspan="2">
                            <a href="/RoleAdmin/Create" class="btn btn-danger">Oluştur</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
