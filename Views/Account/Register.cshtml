@model UserIdentityProject.Models.Register
@{
    ViewBag.Title = "Register";
}

<div class="container mt-4">
    <h2>Register</h2>
    <hr />

    @Html.ValidationSummary()

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="Username">Username</label>
            @Html.TextBoxFor(i => i.Username, new { @class = "form-control", placeholder = "Enter your username" })
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            @Html.TextBoxFor(i => i.Email, new { @class = "form-control", placeholder = "Enter your email" })
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            @Html.PasswordFor(i => i.Password, new { @class = "form-control", placeholder = "Enter your password" })
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    }
</div>
