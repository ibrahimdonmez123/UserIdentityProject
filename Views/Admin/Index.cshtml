@model IEnumerable<UserIdentityProject.Identity.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<div class="container mt-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Kullanıcılar</h3>
        </div>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center">
                            Kullanıcı yok
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <a href="/Account/Logout" class="btn btn-danger mt-3">Çıkış Yap</a>
</div>
